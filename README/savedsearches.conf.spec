# GlobalBanner action settings

action.globalBanner = [0|1]
* Enable banner action

action.globalBanner.param.message = <string>
* Field value of the message of the global banner
* (required)

action.globalBanner.param.background_color = [green|blue|yellow|orange|red]
* Field value of the background color of the global banner
* (required)

action.globalBanner.param.hyperlink = [http://<string>|https://<string>]
* Field value of the hyperlink of the global banner
* (optional)

action.globalBanner.param.hyperlink_text = <string>
* Field value of the hyperlink text of the global banner
* (optional)
